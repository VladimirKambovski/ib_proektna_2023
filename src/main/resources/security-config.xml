<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/security
        http://www.springframework.org/schema/security/spring-security-5.4.xsd">

    <http auto-config="true">
        <intercept-url pattern="/CustomerManagement/**" access="hasRole('ROLE_Admin')" />
        <intercept-url pattern="/EmployeeManagement/**" access="hasAnyRole('ROLE_Admin', 'ROLE_Employee')" />
        <intercept-url pattern="/TransactionMonitoring/**" access="hasAnyRole('ROLE_Admin', 'ROLE_Employee')" />
        <intercept-url pattern="/DepositsWithdrawals/**" access="hasRole('ROLE_Customer')" />
        <intercept-url pattern="/personalTransactionHistory/**" access="hasRole('ROLE_Customer')" />
        <form-login />
        <logout />
    </http>

    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="admin" password="admin" authorities="ROLE_Admin" />
                <user name="employee" password="employee" authorities="ROLE_Employee" />
                <user name="customer" password="customer" authorities="ROLE_Customer" />
            </user-service>
        </authentication-provider>
    </authentication-manager>

</beans:beans>